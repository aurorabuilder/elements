	<!-- requirements grant -->
	<element name="Half-Elf Variant" type="Grants" source="Sword Coast Adventurer’s Guide" id="ID_WOTC_SCAG_GRANTS_VARIANT_HALF_ELF" />

	<!-- obsolete, but not errata'd -->
	<element name="Keen Senses Variant" type="Race Variant" source="Sword Coast Adventurer’s Guide" id="ID_WOTC_SCAG_RACE_VARIANT_HALF_ELF_KEEN_SENSES_VARIANT">
		<supports>Half-Elf Variant</supports>
		<description>
			<p>Some half-elves in Faerûn have a racial trait in place of the Skill Versatility trait. If your DM allows it, your half-elf character can forgo Skill Versatility and instead take the elf trait Keen Senses.</p>
			<div element="ID_RACIAL_TRAIT_KEEN_SENSES" />
		</description>
		<sheet display="false" />
		<rules>
			<grant type="Grants" id="ID_WOTC_SCAG_GRANTS_VARIANT_HALF_ELF" />
			<grant type="Racial Trait" id="ID_RACIAL_TRAIT_KEEN_SENSES" />
		</rules>
	</element>
	<element name="Wood Elf Descent" type="Race Variant" source="Sword Coast Adventurer’s Guide" id="ID_WOTC_SCAG_RACE_VARIANT_HALF_ELF_WOOD_ELF_DESCENT">
		<supports>Half-Elf Variant</supports>
		<description>
			<p>Some half-elves in Faerûn have a racial trait in place of the Skill Versatility trait. If your DM allows it, your half-elf character can forgo Skill Versatility and instead choose the wood elf's Elf Weapon Training, Fleet of Foot, or Mask of the Wild.</p>
			<div element="ID_RACIAL_TRAIT_ELF_WEAPON_TRAINING" />
			<div element="ID_RACIAL_TRAIT_FLEET_OF_FOOT" />
			<div element="ID_RACIAL_TRAIT_MASK_OF_THE_WILD" />
		</description>
		<sheet alt="Half-Elf (Wood Elf)" display="false" />
		<rules>
			<grant type="Grants" id="ID_WOTC_SCAG_GRANTS_VARIANT_HALF_ELF" />
			<select type="Racial Trait" name="Racial Trait, Wood Elf Descent" supports="ID_RACIAL_TRAIT_ELF_WEAPON_TRAINING|ID_RACIAL_TRAIT_FLEET_OF_FOOT|ID_RACIAL_TRAIT_MASK_OF_THE_WILD" />
		</rules>
	</element>
	<element name="Moon Elf Descent" type="Race Variant" source="Sword Coast Adventurer’s Guide" id="ID_WOTC_SCAG_RACE_VARIANT_HALF_ELF_MOON_ELF_DESCENT">
		<supports>Half-Elf Variant</supports>
		<description>
			<p>Some half-elves in Faerûn have a racial trait in place of the Skill Versatility trait. If your DM allows it, your half-elf character can forgo Skill Versatility and instead choose the high-elf's elf's Elf Weapon Training or Cantrip.</p>
			<div element="ID_RACIAL_TRAIT_ELF_WEAPON_TRAINING" />
			<div element="ID_RACIAL_TRAIT_CANTRIP" />
		</description>
		<sheet alt="Half-Elf (Moon Elf)" display="false" />
		<rules>
			<grant type="Grants" id="ID_WOTC_SCAG_GRANTS_VARIANT_HALF_ELF" />
			<select type="Racial Trait" name="Racial Trait, Moon Elf Descent" supports="ID_RACIAL_TRAIT_ELF_WEAPON_TRAINING|ID_RACIAL_TRAIT_CANTRIP" />
		</rules>
	</element>
	<element name="Sun Elf Descent" type="Race Variant" source="Sword Coast Adventurer’s Guide" id="ID_WOTC_SCAG_RACE_VARIANT_HALF_ELF_SUN_ELF_DESCENT">
		<supports>Half-Elf Variant</supports>
